{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "paths": {
      "@file-abstractions/*": [
        "abstractions/node/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}